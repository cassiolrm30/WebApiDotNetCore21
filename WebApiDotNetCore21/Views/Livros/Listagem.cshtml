@{
    ViewData["Title"] = "Listagem";
}
<!DOCTYPE html>
<html>
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
    <h2>Listagem</h2>
    <div class="container">
        <table class="table table-hover" style="font-family:Arial; font-size:13px; border:solid 1px;">
            <thead>
                <tr style="text-align:center; font-size:15px; background-color:black; color:white;">
                    <th style="padding:5px;">Firstname</th>
                    <th style="padding:5px;">Lastname</th>
                    <th style="padding:5px;">Email</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="padding:5px;">John</td>
                    <td style="padding:5px;">Doe</td>
                    <td style="padding:5px;">john@example.com</td>
                </tr>
                <tr>
                    <td style="padding:5px;">Mary</td>
                    <td style="padding:5px;">Moe</td>
                    <td style="padding:5px;">mary@example.com</td>
                </tr>
                <tr>
                    <td style="padding:5px;">July</td>
                    <td style="padding:5px;">Dooley</td>
                    <td style="padding:5px;">july@example.com</td>
                </tr>
                <tr>
                    <td style="text-align:center;padding:2px;padding-top:15px;padding-bottom:0px;" colspan="3">
                        <nav style="padding-left:300px;padding-right:300px;">
                            <ul class="pagination" style="border:solid 1px;border-color:green;">
                                <li class="page-item">
                                    <a class="page-link" style="color:black;" href="#" aria-label="Anterior">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" style="color:black;font" href="#">1</a></li>
                                <li class="page-item active" aria-current="page"><a class="page-link" style="background-color:green;" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" style="color:black;" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" style="color:black;" href="#" aria-label="Próximo">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>